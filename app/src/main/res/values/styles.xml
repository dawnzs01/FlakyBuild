<resources>

    <!-- SplashActivity theme. -->
    <style name="SplashTheme" parent="AppTheme">
        <!-- Activity背景 -->
        <item name="android:windowBackground">@color/page_white</item>
    </style>

    <!--消息页面使用TabLayout的时候的样式-->
    <style name="CustomerTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_ff598f</item>
        color_ff598f
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@color/color_transparent</item>
        <item name="tabTextColor">@color/color_454545</item>
        <item name="tabSelectedTextColor">@color/color_333333</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_15</item>
        <!--该属性是是否阻止渲染Tab的图标-->
        <!--<item name="textAllCaps">true</item>-->
    </style>

    <style name="popup_anim_style" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_show_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_hide_anim</item>
    </style>
    <!--背景透明的Dialog样式-->
    <style name="dialog_translucent_theme" parent="dialog_default_theme">
        <!--半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--Loading的Dialog样式-->
    <style name="dialog_translucent_theme_loading" parent="dialog_default_theme">
        <!--半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
