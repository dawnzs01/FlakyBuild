<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_D1123A50">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/main_320"
                android:layout_height="@dimen/main_540"
                android:background="@drawable/bg_white_rectangle_round_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/main_20"
                    android:letterSpacing="0.25"
                    android:text="@string/node_info"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_16"/>

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/main_10"
                    android:layout_weight="10000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/main_24"
                                android:layout_height="@dimen/main_24"
                                android:src="@mipmap/icon_failed_green"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/main_7"
                                android:text="@string/online"
                                android:textColor="@color/color_4A92FF"
                                android:textSize="@dimen/text_16"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/main_60"
                            android:layout_marginRight="@dimen/main_40"
                            android:layout_marginTop="@dimen/main_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/alias"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>

                            <EditText
                                android:id="@+id/tv_node_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@mipmap/icon_edit_black"
                                android:drawablePadding="@dimen/main_5"
                                android:text="unname"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"
                                android:background="@null" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/main_60"
                            android:layout_marginRight="@dimen/main_40"
                            android:layout_marginTop="@dimen/main_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/version"
                                android:textColor="@color/color_4A92FF"
                                android:textSize="@dimen/text_16"/>

                            <TextView
                                android:id="@+id/tv_node_version"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="0.0.1"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/main_60"
                            android:layout_marginRight="@dimen/main_40"
                            android:layout_marginTop="@dimen/main_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/backend"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>

                            <TextView
                                android:id="@+id/tv_node_backend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="Omnicore Proxy"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/main_60"
                            android:layout_marginRight="@dimen/main_40"
                            android:layout_marginTop="@dimen/main_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/mode"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>

                            <TextView
                                android:id="@+id/tv_node_mode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="NoSeedBackup"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/main_60"
                            android:layout_marginRight="@dimen/main_40"
                            android:layout_marginTop="@dimen/main_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/network_first_upper"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>

                            <TextView
                                android:id="@+id/tv_node_network"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="Regtest"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/main_60"
                            android:layout_marginRight="@dimen/main_40"
                            android:layout_marginTop="@dimen/main_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/rpchost"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>

                            <TextView
                                android:id="@+id/tv_node_rpchost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="omnicored:18332"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/main_60"
                            android:layout_marginRight="@dimen/main_40"
                            android:layout_marginTop="@dimen/main_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/ports"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>

                            <TextView
                                android:id="@+id/tv_node_ports"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="8081:8080"
                                android:textColor="@color/color_99_transparent"
                                android:textSize="@dimen/text_16"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/main_0.2"
                            android:layout_marginLeft="@dimen/main_26"
                            android:layout_marginRight="@dimen/main_26"
                            android:layout_marginTop="@dimen/main_15"
                            android:background="@color/color_black"/>

                        <TextView
                            android:id="@+id/tv_node_zmqpubrawblock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_8"
                            android:layout_marginLeft="@dimen/main_45"
                            android:layout_marginRight="@dimen/main_45"
                            android:layout_gravity="center"
                            android:textColor="@color/color_99_transparent"
                            android:textSize="@dimen/text_16"/>

                        <TextView
                            android:id="@+id/tv_node_zmqpubrawtx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_8"
                            android:layout_marginLeft="@dimen/main_45"
                            android:layout_marginRight="@dimen/main_45"
                            android:layout_gravity="center"
                            android:textColor="@color/color_99_transparent"
                            android:textSize="@dimen/text_16"/>
                        </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_20"
                    android:layout_marginBottom="@dimen/main_30"
                    android:layout_marginLeft="@dimen/main_60"
                    android:layout_marginRight="@dimen/main_40">

                    <LinearLayout
                        android:id="@+id/layout_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_36"
                            android:layout_height="@dimen/main_36"
                            android:src="@mipmap/icon_copy_green"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_7"
                            android:letterSpacing="0.25"
                            android:text="@string/copy_upper"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_16"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_reboot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_36"
                            android:layout_height="@dimen/main_36"
                            android:src="@mipmap/icon_power_green"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_7"
                            android:letterSpacing="0.25"
                            android:text="@string/reboot_upper"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_16"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_31"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/main_56"
                android:layout_height="@dimen/main_56"
                android:src="@mipmap/icon_close_x_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.25"
                android:text="@string/close"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_16"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>