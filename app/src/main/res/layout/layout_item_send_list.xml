<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/v_deliver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_0.2"
        android:background="@color/color_black"/>

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="@dimen/main_24"
        android:layout_height="@dimen/main_24"
        android:layout_marginLeft="@dimen/main_20"
        android:layout_marginTop="@dimen/main_8"
        android:background="@drawable/bg_btn_round_000000_25"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_16"/>

    <RelativeLayout
        android:id="@+id/lv_friend_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_45"
        android:layout_marginRight="@dimen/main_35"
        android:layout_marginBottom="@dimen/main_15">
        <TextView
            android:id="@+id/tv_send_list_name"
            android:textSize="@dimen/text_16"
            android:text="unname"
            android:textColor="@color/color_99_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_send_list_address"
            android:gravity="right"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_16"
            android:text="1mn8382odjd.........34gy7"
            android:textColor="@color/color_99_transparent"
            android:layout_width="@dimen/main_180"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>