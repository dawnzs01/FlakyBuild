                        android:textSize="@dimen/text_16"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_send_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/main_10"
                    android:layout_marginLeft="@dimen/main_40"
                    android:layout_marginRight="@dimen/main_40"
                    android:text="1mn8382odjddwedqw323f3d32343f23fweg65er4345yge43t4534gy7"
                    android:textColor="@color/color_99_transparent"
                    android:textSize="@dimen/text_16"/>
