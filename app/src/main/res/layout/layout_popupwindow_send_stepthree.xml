                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/likely_in"
                            android:textColor="@color/color_06d78f"
                            android:textSize="@dimen/text_14"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/main_2"
                            android:text="30"
                            android:textColor="@color/color_06d78f"
                            android:textSize="@dimen/text_14"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seconds"
                        android:textColor="@color/color_06d78f"
                        android:textSize="@dimen/text_14"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aets"
                        android:textColor="@color/color_80p_transparent"
                        android:textSize="@dimen/text_16"/>

                    <TextView
                        android:id="@+id/tv_send_gas_fee_amount_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.6"
                        android:textColor="@color/color_80p_transparent"
                        android:textSize="@dimen/text_16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/main_5"
                        android:text="USD"
                        android:textColor="@color/color_80p_transparent"
                        android:textSize="@dimen/text_16"/>
