<?xml version="1.0" encoding="utf-8" ?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="false">
		<layer-list>
			<item>
				<shape android:shape="rectangle">
					<solid android:color="?android:colorControlNormal" />
					<size
						android:width="20.0dip"
						android:height="20.0dip" />
					<corners android:radius="24.0dip" />
				</shape>
			</item>
			<item>
				<shape>
					<corners android:radius="24.0dip" />
					<gradient
						android:centerColor="#00000000"
						android:endColor="#1A000000"
						android:startColor="#00000000"
						android:type="radial" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item android:state_pressed="true">
		<layer-list>
			<item>
				<shape android:shape="rectangle">
					<solid android:color="@color/ui_accent" />
					<size
						android:width="20.0dip"
						android:height="20.0dip" />
					<corners android:radius="24.0dip" />
				</shape>
			</item>
			<item>
				<shape>
					<corners android:radius="24.0dip" />
					<gradient
						android:centerColor="#00000000"
						android:endColor="#1A000000"
						android:startColor="#00000000"
						android:type="radial" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item>
		<layer-list>
			<item>
				<shape android:shape="rectangle">
					<solid android:color="@color/ui_accent" />
					<size
						android:width="20.0dip"
						android:height="20.0dip" />
					<corners android:radius="24.0dip" />
				</shape>
			</item>
			<item>
				<shape>
					<corners android:radius="24.0dip" />
					<gradient
						android:centerColor="#00000000"
						android:endColor="#1A000000"
						android:startColor="#00000000"
						android:type="radial" />
				</shape>
			</item>
		</layer-list>
	</item>
</animated-selector>
