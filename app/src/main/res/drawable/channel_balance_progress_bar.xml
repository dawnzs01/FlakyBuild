<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/main_2" />
            <gradient
                android:angle="270"
                android:centerColor="@color/color_4C49F4"
                android:centerY="0.75"
                android:endColor="@color/color_4C49F4"
                android:startColor="@color/color_4C49F4" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/main_2" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/color_06d78f"
                    android:startColor="@color/color_06d78f" />
            </shape>
        </clip>
    </item>

</layer-list>